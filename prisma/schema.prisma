generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  walletAddress String    @unique
  lastSignIn    DateTime?

  schemas Schema[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Schema {
  id              String @id

  chainId         Int 
  registryId      String 
  registryAddress String @unique
  name            String
  description     String @db.Text

  schema Json

  userId String
  user   User   @relation(fields: [userId], references: [id])

  usages   SchemaUsages[]
  webhooks Webhook[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SchemaUsages {
  id       String @id
  schemaId String

  schema Schema @relation(fields: [schemaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Webhook {
  id String @id

  url      String
  schemaId String
  schema   Schema @relation(fields: [schemaId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
