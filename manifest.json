{
  "manifest_version": 3,
  "name": "PLOPL",
  "version": "1.0.0",
  "description": "Trustless Off-chain to On-chain integration made easy!",
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": ["webRequest", "storage", "sidePanel", "tabs"],
  "host_permissions": ["*://*/*"],
  "externally_connectable": {
    "matches": ["*://*/*"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' *"
  }
}
